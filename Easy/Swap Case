# Title : Swap case from CodeEval
# Author : James Fody
# Description : Swap the case of letters in given sentence

File.open("data.txt").each_line do |line|
  if !line.empty?
    line = line.split(" ")
    line.delete("\n")
    for x in 0...line.length
      word = line[x].split("")
      for y in 0...word.length
        if word[y].ord >= 97 && word[y].ord <= 122
          word[y] = word[y].upcase
        elsif
          word[y].ord >= 65 && word[y].ord <= 90
          word[y] = word[y].downcase
        end
      end
      print word.join + " "
    end
    print "\n"
  end
end
